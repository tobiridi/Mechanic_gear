<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle"
            android:tint="#5DC63E">
            <stroke
                android:width="1dp"
                android:color="#222222" />
            <corners
                android:radius="10dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle"
            android:tint="#C2D3BD">
            <stroke
                android:width="1dp"
                android:color="#222222" />
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />
            <corners
                android:radius="10dp" />
        </shape>
    </item>
</selector>